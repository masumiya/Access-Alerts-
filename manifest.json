{
  "name": "Access Alerts!",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "When accessing the domain saved by setting, an alert will be displayed.",
  "browser_action" : {
    "default_popup" : "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["action.js"],
      "run_at": "document_start"
    }
  ]
}
